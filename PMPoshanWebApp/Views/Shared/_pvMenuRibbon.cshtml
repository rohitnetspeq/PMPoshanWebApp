        <!-- 🌙 Dark Mode Toggle -->
        <button id="dark-toggle" class="flex items-center gap-1 hover:opacity-80 transition">
            <span class="material-symbols-outlined text-white text-base" id="dark-icon">dark_mode</span>
        </button>

        <!-- 🔠 Font Size Controls -->
        <button id="text-decrease" class="hidden md:flex items-center hover:opacity-80 transition text-white font-semibold text-sm leading-none">
            A<span class="text-xs align-top">-</span>
        </button>

        <button id="text-reset" class="hidden md:flex items-center hover:opacity-80 transition text-white font-semibold text-sm leading-none">
            A
        </button>

        <button id="text-increase" class="hidden md:flex items-center hover:opacity-80 transition text-white font-semibold text-sm leading-none">
            A<span class="text-xs align-top">+</span>
        </button>

        <button class="items-center hover:opacity-80 transition text-white font-semibold text-sm leading-none pl-4">
