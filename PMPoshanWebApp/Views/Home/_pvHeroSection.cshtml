@model IEnumerable<PMPoshanWebApp.Integrations.EMIS.Models.BannerViewModel>
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>

    .swiper-pagination-bullet {
        width: 10px;
        height: 5px;
        background: #ffffff80; 
        opacity: 1;
        border-radius: 50%;
        transition: all 0.3s ease;
        margin: 0 6px !important;
        backdrop-filter: blur(2px);
    }

    .swiper-pagination-bullet-active {
        width: 28px;
        border-radius: 16px;
        background: #ffffff; 
    }
</style>

<section id="home" class="relative min-h-[60vh] md:min-h-[80vh] overflow-hidden">

    <!-- Swiper -->
    <div class="swiper heroSwiper h-full w-full">

        <div class="swiper-wrapper">

            @foreach (var banner in Model)
            {
                <div class="swiper-slide relative flex min-h-[60vh] md:min-h-[80vh] flex-col items-center justify-center gap-6 p-4 text-center overflow-hidden">

                    <!-- Image  -->
                    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat will-change-transform transition-transform duration-75 hero-parallax"
                         style="background-image: url('@banner.BannerThumb');">
                    </div>
                </div>
            }
        </div>

        <!-- Pagination Dots -->
        <div class="swiper-pagination"></div>

    </div>

</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
    const swiper = new Swiper(".heroSwiper", {
        loop: true,
        autoplay: { delay: 8000 },
        pagination: { el: ".swiper-pagination", clickable: true },
        speed: 900,
        effect: "fade"
    });
</script>


